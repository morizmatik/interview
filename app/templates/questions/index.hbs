<Buttons::Add @route="questions.add"/>
<div class="mt-4 flex flex-col">
  <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-6 py-3 bg-gray-50 text-left  font-medium text-gray-500 uppercase ">
                ID
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left  font-medium text-gray-500 uppercase ">
                Вопрос
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left  font-medium text-gray-500 uppercase ">
                Ответ
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left  font-medium text-gray-500 uppercase ">
                Должность
                <PowerSelect @selected={{this.selectedPost}} @options={{this.posts}} @onChange={{this.setPost}} as |post|>
                  <span class="capitalize">{{post.title}} {{post.level}}</span>
                </PowerSelect>
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left  font-medium text-gray-500 uppercase cursor-pointer" 
              {{on "click" this.sortBycomplexity}}
              >
                Сложность 
                {{#if (eq this.sortBy "complexity") }}
                  &uarr;
                {{else if (eq this.sortBy "-complexity")}}
                  &darr;
                {{/if}}
                 
              </th>
              <th class="px-6 py-3 bg-gray-50"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
              {{#each this.model key="@index" as |question|}}
                <Questions::Row @question={{question}} />
              {{/each}}
          </tbody>
        </table>
        <PageNumbers @content={{this.pagedContent}} class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 text-gray-700 w-full"/>      
      </div>
    </div>
  </div>
</div>
