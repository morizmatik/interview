<form class="bg-white shadow overflow-hidden sm:rounded-lg px-6" {{on "submit" this.save}}>
  <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      {{@title}}
    </h3>
    <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
      {{@description}}
    </p>
  </div>
  <div>
    <dl>
      {{yield}}
    </dl>
    <div class="w-full p-4">
      <Buttons::Submit/>
      {{#if @model.id}}
        <Buttons::Remove @remove={{this.remove}}/>
      {{/if}}
      <Buttons::Cancel @reset={{this.reset}}/>
    </div>
  </div>
</form>